<h1>Cadastre o veículo</h1>

<form class="form" action="/veiculos/updateveiculo" method="POST">
  <input type="hidden" name="id" value="{{veiculo.id}}">
  <div class="form-control">
    <label for="marca">Marca:</label>
    <input type="text" name="marca" placeholder="Nome completo do veículo" value="{{veiculo.marca}}">
  </div>

  <div class="form-control">
    <label for="modelo">Modelo:</label>
    <input type="text" name="modelo" placeholder="Modelo do veículo" value="{{veiculo.modelo}}">
  </div>

  <div class="form-control">
    <label for="ano">Ano:</label>
    <input type="text" name="ano" placeholder="Ano do veículo" value="{{veiculo.ano}}">
  </div>

  <div class="form-control">
    <label for="placa">Placa:</label>
    <input type="text" name="placa" placeholder="Placa do veículo" value="{{veiculo.placa}}">
  </div>

    <div class="form-control">
    <label for="disponibilidade">Disponibilidade:</label>
    <input type="text" name="disponibilidade" placeholder="Disponibilidade do veículo" value="{{veiculo.disponibilidade}}">
  </div>

  <input type="submit" value="Editar">
</form>